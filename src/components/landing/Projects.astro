---
import projects from "../../config/projects.json";
---

<section>
  <h2 class="font-bold text-5xl my-10 text-center">Projects</h2>
  {
    projects.map((project) => (
      <div class="flex flex-col mb-2 md:flex-row text-center md:text-left my-5">
        <div class="flex-1">
          <h2 class="font-bold text-2xl my-4">{project.title}</h2>
          <p class="mb-4">{project.description}</p>
          <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 rounded">More info</button>
        </div>

        <div class="flex-1 mt-3">
          <img src={project.image} class="w-72 m-auto rounded" alt="Image" />
        </div>
      </div>
    ))
  }
</section>
